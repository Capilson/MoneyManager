<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="using:System">
    <ResourceDictionary.ThemeDictionaries>

        <ResourceDictionary x:Key="Dark">

            <!-- Common colors -->
            <Color x:Key="AppAccentColor">#ff6b53</Color>
            <Color x:Key="AppBackgroundColor">#FF1C1B1B</Color>
            <Color x:Key="SelectionHighlightColor">#ff6b53</Color>


            <!-- Colors -->

            <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush"
                             Color="WhiteSmoke" />

            <SolidColorBrush x:Key="PhoneAccentBrush"
                             Color="{StaticResource AppAccentColor}" />

            <SolidColorBrush x:Key="PhoneTextBoxEditBorderBrush"
                             Color="{StaticResource AppAccentColor}" />

            <SolidColorBrush x:Key="PhoneRadioCheckBoxPressedBrush"
                             Color="{StaticResource AppAccentColor}" />

            <SolidColorBrush x:Name="ListItemSolidColorBrush"
                             Color="#CCFFFFFF" />

            <SolidColorBrush x:Name="PhoneTextBoxEditBorderBrush"
                             Color="{StaticResource AppAccentColor}" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>